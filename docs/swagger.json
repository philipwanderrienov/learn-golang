                "description": "Update church member information including name, email, phone, address, and biography",
                "consumes": [
                    "application/json"
                ],
                "tags": [
                    "members"
                ],
                "summary": "Update a church member",
                "parameters": [
                    {
                        "type": "integer",
                        "format": "int64",
                        "description": "Member ID",
                        "name": "id",
                        "in": "path",
                        "required": true
                    },
                    {
                        "description": "Updated member data",
                        "name": "member",
                        "in": "body",
                        "required": true,
                        "schema": {
                            "$ref": "#/definitions/model.ChurchMember"
                        }
                    }
                ],
                "responses": {
                    "204": {
                        "description": "No content",
                        "schema": {
                            "type": "string"
                        }
                    },
                    "400": {
                        "description": "Invalid request",
                        "schema": {
                            "type": "string"
                        }
                    },
                    "404": {
                        "description": "Member not found",
                        "schema": {
                            "type": "string"
                        }
                    },
                    "500": {
                        "description": "Internal server error",
                        "schema": {
                            "type": "string"
                        }
                    }
                }
            },
            "delete": {
                "description": "Delete church member by ID",
                "tags": [
                    "members"
                ],
                "summary": "Delete a church member",
                "parameters": [
                    {
                        "type": "integer",
                        "format": "int64",
                        "description": "Member ID",
                        "name": "id",
                        "in": "path",
